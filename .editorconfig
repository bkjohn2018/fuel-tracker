# .editorconfig
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{py,yml,yaml,toml}]
trim_trailing_whitespace = true

[*.{ps1,psm1}]
end_of_line = crlf
indent_size = 2
